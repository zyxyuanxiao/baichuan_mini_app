.search-entry-wrapper {
    padding: 20rpx 40rpx;
    background: #fff;
}

.search-entry {
    display: flex;
    height: 78rpx;
    margin: 0 auto;
    line-height: 80rpx;
    border-radius: 6rpx;
    align-items: center;
    box-sizing: border-box;
    background-color: #ffffff;
    box-shadow: 0rpx 8rpx 27rpx 3rpx rgba(135,142,160,0.15);
}

.search-entry .left-text {
    color: #cacee0;
    font-size: 26rpx;
}

.search-entry .icon-search {
    position: relative;
    margin-right: 14rpx;
    width: 28rpx;
    height: 28rpx;
    margin-left: 20rpx;
}

.search-entry .icon-search .icon {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}